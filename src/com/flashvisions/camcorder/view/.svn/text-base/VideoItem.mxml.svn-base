<?xml version="1.0" encoding="utf-8"?>
<mx:VBox buttonMode="true" xmlns:mx="http://www.adobe.com/2006/mxml" verticalGap="2" horizontalAlign="center">
	<mx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			[Bindable]
			public var title:String;
			
			[Bindable]
			public var source:String; 
			
			public var videoURL:String;
			
			public var description:String;

		]]>
	</mx:Script>
	<mx:Image width="130" height="77" source="{source}"/>
	<mx:Label text="{title}" fontSize="11" fontWeight="normal" color="#000000" textAlign="center" width="100%" height="20"/>
</mx:VBox>
